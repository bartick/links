---
import Icon from './Icon.astro';

export interface Props {
	title: string;
    href: string;
    icon: string;
}

const { title, href, icon } = Astro.props;
---

<div class="relative flex items-center space-x-3 rounded-lg border border-indigo-300 bg-white px-6 py-5 focus-within:ring-2 focus-within:ring-indigo-500 focus-within:ring-offset-2 hover:border-indigo-400 p-4 shadow-md hover:shadow-xl">
    <div class="min-w-0 flex-1">
        <a href={href} class="focus:outline-none" target="_blank" rel="noreferrer">
            <p class="text-xl font-medium text-gray-900 flex flex-col">
                <Icon icon={icon} classStyle="h-0" />
                <span class="pl-9">{title}</span>
            </p>
        </a>
    </div>
</div>